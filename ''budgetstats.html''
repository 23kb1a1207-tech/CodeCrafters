
import React from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { TrendingUp, TrendingDown, PiggyBank, Target, AlertTriangle } from "lucide-react";
import { Progress } from "@/components/ui/progress";
import { Badge } from "@/components/ui/badge";

export default function BudgetStats({ budgetEntries, tasks }) {
  const currentMonth = new Date().getMonth();
  const currentYear = new Date().getFullYear();
  
  const thisMonthEntries = budgetEntries.filter(entry => {
    const entryDate = new Date(entry.date);
    return entryDate.getMonth() === currentMonth && entryDate.getFullYear() === currentYear;
  });

  const monthlyIncome = thisMonthEntries.filter(e => e.type === "income").reduce((sum, e) => sum + e.amount, 0);
  const monthlyExpenses = thisMonthEntries.filter(e => e.type === "expense").reduce((sum, e) => sum + e.amount, 0);
  const monthlyBudgets = thisMonthEntries.filter(e => e.type === "budget_limit").reduce((sum, e) => sum + e.amount, 0);
  const tasksWithCosts = tasks.reduce((sum, t) => sum + (t.actual_cost || 0), 0);

  const totalBalance = monthlyIncome - monthlyExpenses - tasksWithCosts;
  const budgetUsage = monthlyBudgets > 0 ? ((monthlyExpenses + tasksWithCosts) / monthlyBudgets) * 100 : 0;
  const isOverBudget = budgetUsage > 100;

  return (
    <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <Card className="bg-white/80 backdrop-blur-sm border border-white/20">
        <CardHeader className="pb-2">
          <div className="flex justify-between items-center">
            <CardTitle className="text-sm font-medium text-gray-600">Monthly Income</CardTitle>
            <TrendingUp className="w-5 h-5 text-green-500" />
          </div>
        </CardHeader>
        <CardContent>
          <p className="text-2xl font-bold text-green-600">₹{monthlyIncome.toFixed(2)}</p>
        </CardContent>
      </Card>

      <Card className="bg-white/80 backdrop-blur-sm border border-white/20">
        <CardHeader className="pb-2">
          <div className="flex justify-between items-center">
            <CardTitle className="text-sm font-medium text-gray-600">Monthly Expenses</CardTitle>
            <TrendingDown className="w-5 h-5 text-red-500" />
          </div>
        </CardHeader>
        <CardContent>
          <p className="text-2xl font-bold text-red-600">₹{(monthlyExpenses + tasksWithCosts).toFixed(2)}</p>
        </CardContent>
      </Card>

      <Card className="bg-white/80 backdrop-blur-sm border border-white/20">
        <CardHeader className="pb-2">
          <div className="flex justify-between items-center">
            <CardTitle className="text-sm font-medium text-gray-600">Balance</CardTitle>
            <PiggyBank className={`w-5 h-5 ${totalBalance >= 0 ? 'text-green-500' : 'text-red-500'}`} />
          </div>
        </CardHeader>
        <CardContent>
          <p className={`text-2xl font-bold ${totalBalance >= 0 ? 'text-green-600' : 'text-red-600'}`}>
            ₹{totalBalance.toFixed(2)}
          </p>
        </CardContent>
      </Card>

      <Card className="bg-white/80 backdrop-blur-sm border border-white/20">
        <CardHeader className="pb-2">
          <div className="flex justify-between items-center">
            <CardTitle className="text-sm font-medium text-gray-600">Budget Usage</CardTitle>
            <Target className={`w-5 h-5 ${isOverBudget ? 'text-red-500' : 'text-blue-500'}`} />
          </div>
        </CardHeader>
        <CardContent>
          <div className="space-y-2">
            <Progress 
              value={Math.min(budgetUsage, 100)} 
              className={`h-2 ${isOverBudget ? '[&>div]:bg-red-500' : '[&>div]:bg-blue-500'}`}
            />
            <div className="flex justify-between items-center">
              <span className="text-sm text-gray-600">{budgetUsage.toFixed(1)}%</span>
              {isOverBudget && (
                <Badge variant="destructive" className="text-xs">
                  <AlertTriangle className="w-3 h-3 mr-1" />
                  Over Budget
                </Badge>
              )}
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  );
}
